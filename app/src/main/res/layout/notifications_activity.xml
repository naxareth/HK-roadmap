<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Side Menu Button (Top Left) -->
        <Button
            android:id="@+id/sampleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="@string/menu"/>


        <Button
            android:id="@+id/profileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            tools:ignore="RelativeOverlap" />

        <!-- Centered Text -->
        <TextView
            android:id="@+id/centerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_here"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sampleButton"
            android:layout_marginTop="16dp"/>


        <TextView
            android:id="@+id/containerBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@color/green"
            android:gravity="center"
            android:padding="70dp"
            android:text="@string/container_box_5"
            android:textColor="#4E342E" />

        <!-- Third Container Box -->
        <TextView
            android:id="@+id/containerBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/containerBox2"
            android:layout_marginTop="30dp"
            android:background="@color/green"
            android:gravity="center"
            android:padding="70dp"
            android:text="@string/container_box_6"
            android:textColor="#4E342E" />


        <TextView
            android:id="@+id/containerBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/containerBox3"
            android:layout_marginTop="30dp"
            android:background="@color/green"
            android:gravity="center"
            android:padding="70dp"
            android:text="@string/container_box_7"
            android:textColor="#4E342E" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:menu="@menu/nav_menu">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/gray">

            <TextView
                android:id="@+id/navHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hk_roadmap"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

