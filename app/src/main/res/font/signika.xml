<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Light -->
    <font
        android:font="@font/signika_light"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/signika_light"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <!-- Regular -->
    <font
        android:font="@font/signika_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/signika_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- Medium -->
    <font
        android:font="@font/signika_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/signika_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <!-- SemiBold -->
    <font
        android:font="@font/signika_semibold"
        android:fontStyle="normal"
        android:fontWeight="600"
        app:font="@font/signika_semibold"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <!-- Bold -->
    <font
        android:font="@font/signika_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/signika_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />
</font-family>