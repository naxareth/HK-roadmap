
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HKroadmap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Disable dynamic colors -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- Toolbar and AppBar styles -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="elevationOverlayColor">@android:color/transparent</item>

        <!-- Global text appearances -->
        <item name="android:textViewStyle">@style/TextAppearance.App.Default</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Default</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Default</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline</item>

        <!-- Global component styles -->
        <item name="android:buttonStyle">@style/Widget.App.Button</item>
        <item name="android:editTextStyle">@style/Widget.App.EditText</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>

        <!-- Theme colors -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_variant</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/secondary_green_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorAccent">@color/primary_green</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Material3 specific color overrides -->
        <item name="colorPrimaryContainer">@color/primary_green_light</item>
        <item name="colorOnPrimaryContainer">@color/primary_green_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_green_light</item>
        <item name="colorOnSecondaryContainer">@color/secondary_green_dark</item>
        <item name="colorTertiary">@color/primary_green</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/primary_green_light</item>
        <item name="colorOnTertiaryContainer">@color/primary_green_dark</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface</item>

        <!-- Ripple and selection colors -->
        <item name="colorControlHighlight">@color/ripple_green</item>
        <item name="android:colorControlHighlight">@color/ripple_green</item>
        <item name="colorControlActivated">@color/primary_green</item>
        <item name="android:colorControlActivated">@color/primary_green</item>
        <item name="colorControlNormal">@color/gray_600</item>
        <item name="android:colorControlNormal">@color/gray_600</item>

        <!-- Dialog and popup styling to remove pink tint -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="dialogTheme">@style/ThemeOverlay.App.Dialog</item>
        <item name="android:dialogTheme">@style/ThemeOverlay.App.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <!-- Toolbar and AppBar Styles -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/gray_600</item>
        <item name="colorControlNormal">@color/primary_green</item>
        <item name="popupTheme">@style/ThemeOverlay.App.PopupMenu</item>
    </style>

    <style name="Widget.App.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="elevation">4dp</item>
        <item name="titleTextStyle">@style/TextAppearance.App.ActionBar.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.App.ActionBar.Subtitle</item>
    </style>

    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="liftOnScroll">false</item>
        <item name="statusBarForeground">@null</item>
    </style>

    <style name="TextAppearance.App.ActionBar.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/signika_medium</item>
    </style>

    <style name="TextAppearance.App.ActionBar.Subtitle" parent="TextAppearance.Material3.ActionBar.Subtitle">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:fontFamily">@font/signika_regular</item>
    </style>

    <style name="ThemeOverlay.App.PopupMenu" parent="ThemeOverlay.Material3.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/primary_green</item>
    </style>

    <!-- Dialog Styles -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorSecondary">@color/primary_green</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorSecondary">@color/primary_green</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.App.Button.TextButton.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_green</item>
        <item name="rippleColor">@color/ripple_green</item>
        <item name="android:fontFamily">@font/signika_medium</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.App.Default" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="fontFamily">@font/signika_regular</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/signika_medium</item>
        <item name="fontFamily">@font/signika_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/signika_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">@color/ripple_green</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemRippleColor">@color/ripple_green</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigationView.ActiveIndicator</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_green</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.App.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/gray_600</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.App.InputHint</item>
        <item name="errorTextAppearance">@style/TextAppearance.App.InputError</item>
        <item name="boxStrokeColor">@color/primary_green</item>
        <item name="hintTextColor">@color/primary_green</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="endIconTint">@color/primary_green</item>
    </style>

    <!-- Input Hint Style -->
    <style name="TextAppearance.App.InputHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="fontFamily">@font/signika_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <!-- Input Error Style -->
    <style name="TextAppearance.App.InputError" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="fontFamily">@font/signika_regular</item>
        <item name="android:textColor">@color/error_red</item>
    </style>

    <!-- Radio Button Style -->
    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="buttonTint">@color/primary_green</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Default</item>
    </style>

    <!-- Checkbox Style -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="buttonTint">@color/primary_green</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Default</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.App.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipSpacingHorizontal">8dp</item>
        <item name="chipSpacingVertical">4dp</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="rippleColor">@color/ripple_green</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/gray_300</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Chip</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="TextAppearance.App.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Status Chip Styles -->
    <style name="Widget.App.Chip.Status" parent="Widget.App.Chip">
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="Widget.App.Chip.Status.Draft" parent="Widget.App.Chip.Status">
        <item name="chipBackgroundColor">@color/status_draft</item>
        <item name="chipStrokeColor">@color/status_draft</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Chip.Status.Pending" parent="Widget.App.Chip.Status">
        <item name="chipBackgroundColor">@color/status_pending</item>
        <item name="chipStrokeColor">@color/status_pending</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Chip.Status.Approved" parent="Widget.App.Chip.Status">
        <item name="chipBackgroundColor">@color/status_approved</item>
        <item name="chipStrokeColor">@color/status_approved</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Chip.Status.Rejected" parent="Widget.App.Chip.Status">
        <item name="chipBackgroundColor">@color/status_rejected</item>
        <item name="chipStrokeColor">@color/status_rejected</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Your existing theme inheritance -->
    <style name="Theme.HKroadmap" parent="Base.Theme.HKroadmap" />
</resources>
