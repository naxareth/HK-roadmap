<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HKroadmap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Global text appearances -->
        <item name="android:textViewStyle">@style/TextAppearance.App.Default</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Default</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Default</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline</item>

        <!-- Global component styles -->
        <item name="android:buttonStyle">@style/Widget.App.Button</item>
        <item name="android:editTextStyle">@style/Widget.App.EditText</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>

        <!-- Theme colors -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_variant</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/secondary_green_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorAccent">@color/primary_green</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:windowLightStatusBar">true</item>


        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Ripple and selection colors -->
        <item name="colorControlHighlight">@color/ripple_green</item>
        <item name="android:colorControlHighlight">@color/ripple_green</item>
        <item name="colorControlActivated">@color/primary_green</item>
        <item name="android:colorControlActivated">@color/primary_green</item>
        <item name="colorControlNormal">@color/gray_600</item>
        <item name="android:colorControlNormal">@color/gray_600</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.App.Default" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="fontFamily">@font/signika_regular</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/signika_medium</item>
        <item name="fontFamily">@font/signika_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/signika_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">@color/ripple_green</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemRippleColor">@color/ripple_green</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigationView.ActiveIndicator</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_green</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.App.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/gray_600</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.App.InputHint</item>
        <item name="errorTextAppearance">@style/TextAppearance.App.InputError</item>
        <item name="boxStrokeColor">@color/primary_green</item>
        <item name="hintTextColor">@color/primary_green</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="endIconTint">@color/primary_green</item>
    </style>

    <!-- Input Hint Style -->
    <style name="TextAppearance.App.InputHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="fontFamily">@font/signika_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <!-- Input Error Style -->
    <style name="TextAppearance.App.InputError" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="fontFamily">@font/signika_regular</item>
        <item name="android:textColor">@color/error_red</item>
    </style>

    <!-- Radio Button Style -->
    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="buttonTint">@color/primary_green</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Default</item>
    </style>

    <!-- Checkbox Style -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="buttonTint">@color/primary_green</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Default</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.App.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipSpacingHorizontal">8dp</item>
        <item name="chipSpacingVertical">4dp</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="rippleColor">@color/ripple_green</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/gray_300</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Chip</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="TextAppearance.App.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Status Chip Styles -->
    <style name="Widget.App.Chip.Status" parent="Widget.App.Chip">
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="Widget.App.Chip.Status.Draft" parent="Widget.App.Chip.Status">
        <item name="chipBackgroundColor">@color/status_draft</item>
        <item name="chipStrokeColor">@color/status_draft</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Chip.Status.Pending" parent="Widget.App.Chip.Status">
        <item name="chipBackgroundColor">@color/status_pending</item>
        <item name="chipStrokeColor">@color/status_pending</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Chip.Status.Approved" parent="Widget.App.Chip.Status">
        <item name="chipBackgroundColor">@color/status_approved</item>
        <item name="chipStrokeColor">@color/status_approved</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Chip.Status.Rejected" parent="Widget.App.Chip.Status">
        <item name="chipBackgroundColor">@color/status_rejected</item>
        <item name="chipStrokeColor">@color/status_rejected</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Your existing theme inheritance -->
    <style name="Theme.HKroadmap" parent="Base.Theme.HKroadmap" />
</resources>